<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RuppAssignment" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColorGreen</item>
        <item name="colorPrimaryVariant">@color/secondaryColorDarkGreen</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:textColorSecondary">@color/white</item>

        <!-- Status bar co  lor. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->


    </style>

    <!-- button text style -->
    <style name="styleTextButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- progress bar style -->

    android:backgroundTint="@color/white"
    android:indeterminate="true"
    android:indeterminateTint="@color/primaryColorGreen"
    android:max="100"

    <style name="Widget.AppCompat.ProgressBar.Horizontal.progressBarStyle">
        <item name="backgroundTint">@color/white</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateTint">@color/primaryColorGreen</item>
        <item name="android:max">100</item>
        <item name="android:layout_margin">5dp</item>

    </style>

</resources>